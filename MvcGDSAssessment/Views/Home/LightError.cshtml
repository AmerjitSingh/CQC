

@{
    ViewData["Title"] = "Light Error Page";
}

@{
  if (((int)TempData.Peek("CheckAnswers")) == 0)
  {
    <a asp-controller="Home" asp-action="Address" class="govuk-back-link">Back</a>
  }
}
<form method="post">
    <div class="govuk-form-group govuk-form-group--error">
    <fieldset class="govuk-fieldset" aria-describedby="light-hint">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
        <h1 class="govuk-fieldset__heading">
            Are they happy with the level of lighting ?
        </h1>
        </legend>
        <span id="light-hint" class="govuk-hint">
        This includes all lighting in and round your home.
        </span>
        <span id="light-error" class="govuk-error-message">
        <span class="govuk-visually-hidden">Error:</span> Select one option
        </span>
        <div class="govuk-radios govuk-radios--inline">
        <div class="govuk-radios__item">
            <input class="govuk-radios__input" id="goodlight" name="goodlight" type="radio" value="yes">
            <label class="govuk-label govuk-radios__label" for="goodlight">
            Yes
            </label>
        </div>
        <div class="govuk-radios__item">
            <input class="govuk-radios__input" id="badlight" name="badlight" type="radio" value="no" >
            <label class="govuk-label govuk-radios__label" for="badlight">
            No
            </label>
        </div>
        </div>
    </fieldset>
        <div>&nbsp;</div>
        <button class="govuk-button" data-module="govuk-button" asp-action="Light" asp-controller="Home">
        Continue
        </button>
</form>